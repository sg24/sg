<div class="site-main__content--wrapper">
    <div class="site-main__content--overlay"></div>
    <div class="site-main__content--top"></div>
    <ul class="site-main__content--tab">
        <li><i class="fas fa-clone icon icon__site-main--content__tab--clone"></i> Post</li>
        <li>
            <i class="fas fa-location-arrow icon icon__site-main--content__tab--share"></i> Shared
            <div class="active__main active__main--shareme">
                <div>99</div>
            </div>    
        </li>
    </ul>

    <div class="reuse-pt-filter">
        <div class="reuse-pt-filter__wrapper">
            {{> reusecateg}}
            {{> reusefilter}}
